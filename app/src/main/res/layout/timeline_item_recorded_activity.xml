<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#1A7E74"
    tools:context="com.example.cobex.CaptureSound">


    <androidx.cardview.widget.CardView
        android:id="@+id/timeline_recorded_activity_cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="5dp"
        android:elevation="5dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <pl.hypeapp.materialtimelineview.MaterialTimelineView
            android:id="@+id/timeline_martial_view_record_activity"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@android:color/holo_blue_dark"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/materialTimelineView"
            app:timeline_bottom_radio_color="@android:color/white"
            app:timeline_line_color="@android:color/white"
            app:timeline_margin_start="32dp"
            app:timeline_position="first"
            app:timeline_radio_outline_radius="20"
            app:timeline_radio_radius="12"
            app:timeline_top_radio_color="@android:color/white"
            app:timeline_type="item">

            <ImageView
                android:id="@+id/timeline_recorded_activity_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.041"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.466" />

            <TextView
                android:id="@+id/timeline_recorded_activity_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="92dp"
                android:text="TextView"
                app:layout_constraintStart_toEndOf="@+id/timeline_recorded_activity_icon"
                app:layout_constraintTop_toBottomOf="@+id/timeline_recorded_activity_as_string" />

            <TextView
                android:id="@+id/timeline_recorded_activity_title_as_string"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="Recorded: "
                android:textStyle="bold"

                app:layout_constraintBottom_toBottomOf="@+id/timeline_recorded_activity_icon"
                app:layout_constraintStart_toEndOf="@+id/timeline_recorded_activity_icon"
                app:layout_constraintTop_toTopOf="@+id/timeline_recorded_activity_icon"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/timeline_recorded_activity_as_string"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="TextView"
                app:layout_constraintStart_toEndOf="@+id/timeline_recorded_activity_title_as_string"
                app:layout_constraintTop_toTopOf="@+id/timeline_recorded_activity_title_as_string" />


        </pl.hypeapp.materialtimelineview.MaterialTimelineView>

    </androidx.cardview.widget.CardView>

    <pl.hypeapp.materialtimelineview.MaterialTimelineView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        app:layout_constraintStart_toStartOf="@+id/timeline_recorded_activity_cardView"
        app:layout_constraintTop_toBottomOf="@+id/timeline_recorded_activity_cardView"
        app:timeline_margin_start="32dp"
        app:timeline_position="middle"
        app:timeline_type="line">

    </pl.hypeapp.materialtimelineview.MaterialTimelineView>

</androidx.constraintlayout.widget.ConstraintLayout>