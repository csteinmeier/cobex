<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/defaultBackground"
    android:id="@+id/pieChartSeekbar">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="350dp"
        app:cardBackgroundColor="@color/defaultBackground"
        app:cardCornerRadius="20dp"
        android:elevation="20dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <com.example.cobex.view.CircularTextView
                android:id="@+id/influence_dependencies_circular1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:cardCornerRadius="500dp"
                android:layout_marginStart="50dp"
                app:circularColor="@android:color/holo_red_dark"
                app:layout_constraintBottom_toTopOf="@+id/influence_dependencies_division_seekbar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/influence_dependencies_division_textview"
                app:layout_constraintVertical_bias="0.494" />

            <com.example.cobex.view.CircularTextView
                android:id="@+id/influence_dependencies_circular2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:circularColor="@android:color/holo_blue_dark"
                android:layout_marginEnd="50dp"
                app:layout_constraintBottom_toTopOf="@+id/influence_dependencies_division_seekbar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/influence_dependencies_division_textview"
                app:layout_constraintVertical_bias="0.494" />

            <TextView
                android:id="@+id/influence_dependencies_division_textview"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                android:gravity="center"
                android:layout_marginTop="16dp"
                android:fontFamily="sans-serif-black"
                android:scaleX="1.5"
                android:scaleY="1.5"
                android:text="TextView"
                android:textColor="#FAFAFA"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <SeekBar
                android:id="@+id/influence_dependencies_division_seekbar"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_margin="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.877" />



        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>