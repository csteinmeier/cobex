<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/defaultBackground"
    android:id="@+id/pieChartSeekbar">

    <androidx.cardview.widget.CardView
        android:id="@+id/influence_dependencies_card_view"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:cardBackgroundColor="@color/defaultBackground"
        app:cardCornerRadius="20dp"
        android:elevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/influence_dependencies_icon_seekbar"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"/>

            <TextView
                android:id="@+id/influence_dependencies_text_seekbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="placeHolder"
                android:layout_gravity="center"
                android:layout_marginStart="5dp" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <SeekBar
                android:id="@+id/influence_dependencies_seekBar"
                style="@style/Widget.AppCompat.SeekBar.Discrete"
                android:layout_width="100dp"
                android:layout_marginEnd="20dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:max="100"
                android:progress="3" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>